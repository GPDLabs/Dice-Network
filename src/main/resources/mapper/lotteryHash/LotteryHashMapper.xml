<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.gpd.dicenetwork.lotteryHash.mapper.LotteryHashMapper">

    <resultMap id="LotteryHashResultMap" type="org.gpd.dicenetwork.lotteryHash.entity.LotteryHashEntity">
        <id column="id" property="id" />
        <result column="created_at" property="createTime" />
        <result column="updated_at" property="updateTime" />
        <result column="lottery_time" property="lotteryTime" />
        <result column="lottery_hash" property="lotteryHash" />
        <result column="lucky_wallet" property="luckyWallet" />
        <result column="randrom_file" property="randromFile" />
        <result column="file_status" property="fileStatus" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 插入数据 -->
    <insert id="insert" parameterType="org.gpd.dicenetwork.lotteryHash.entity.LotteryHashEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO lottery_hash_list (
            lottery_time,
            lottery_hash,
            lucky_wallet,
            randrom_file,
            file_status,
            status
        ) VALUES (
                     #{entity.lotteryTime},
                     #{entity.lotteryHash},
                     #{entity.luckyWallet},
                     #{entity.randromFile},
                     #{entity.fileStatus},
                     #{entity.status}
                 )
    </insert>

    <!-- 更新数据 -->
    <update id="updateById" parameterType="org.gpd.dicenetwork.lotteryHash.entity.LotteryHashEntity">
        UPDATE lottery_hash_list
        SET
            lottery_time = #{entity.lotteryTime},
            lottery_hash = #{entity.lotteryHash},
            lucky_wallet = #{entity.luckyWallet},
            randrom_file = #{entity.randromFile},
            file_status = #{entity.fileStatus},
            status = #{entity.status}
        WHERE id = #{entity.id}
    </update>

    <!-- 删除数据 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM lottery_hash_list WHERE id = #{id}
    </delete>

    <!-- 查询单条数据 -->
    <select id="selectById" resultType="org.gpd.dicenetwork.lotteryHash.entity.LotteryHashEntity">
        SELECT * FROM lottery_hash_list WHERE id = #{id}
    </select>

    <!-- 查询所有数据 -->
    <select id="selectList" resultType="org.gpd.dicenetwork.lotteryHash.entity.LotteryHashEntity">
        SELECT * FROM lottery_hash_list
    </select>

</mapper>
